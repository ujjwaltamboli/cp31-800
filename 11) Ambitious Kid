#include <bits/stdc++.h>
using namespace std;
int main(){
    int n;
    cin>>n;
    vector<int> store(n,0);
    int mini=INT_MAX;
    for (int i=0;i<n;i++){
        cin>>store[i];
        mini=min(mini,abs(store[i]));
    }

    //T.C:- O(n);
    //S.C:- O(n);
    cout<<mini<<endl;
    return 0;
}
