#include <bits/stdc++.h>
using namespace std;
int main(){
    int t;
    cin>>t;
    while (t--){
        int n;
        cin>>n;
        vector<int> store(n,0);
        int sum=0;
        for (int i=0;i<n;i++){
            cin>>store[i];
            sum=sum+store[i];
        }
        if (sum%2==0){
            cout<<"Yes"<<endl;
        }
        else{
            cout<<"No"<<endl;
        }
        //T.C:- O(n);
        //S.C:- O(n);
    }
    return 0;
}
