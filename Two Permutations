#include <bits/stdc++.h>
using namespace std;
int main(){
    int t;
    cin>>t;
    while (t--){
        int n,a,b;
        cin>>n>>a>>b;
        if (a==n && b==n){
            cout<<"Yes"<<endl;
        }
        else{
            if (a+b<=n-2){
                cout<<"yes"<<endl;
            }
            else{
                cout<<"No"<<endl;
            }
        }
        //T.C:- O(1);
        // S.C.:- O(1);
    }
    return 0;
}
